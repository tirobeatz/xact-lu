generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  emailVerified DateTime?
  name          String?
  phone         String?
  image         String?
  role          UserRole      @default(USER)
  isVerified    Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  agencyId      String?
  password      String?
  accounts      Account[]
  agency        Agency?       @relation("AgencyOwner")
  favorites     Favorite[]
  invoices      Invoice[]
  properties    Property[]
  savedSearches SavedSearch[]
  sessions      Session[]
  subscription  Subscription?
  agencyMember  Agency?       @relation("AgencyMembers", fields: [agencyId], references: [id])
}

model Agency {
  id          String     @id @default(cuid())
  name        String
  slug        String     @unique
  description String?
  logo        String?
  coverImage  String?
  website     String?
  email       String
  phone       String?
  address     String?
  city        String?
  postalCode  String?
  isVerified  Boolean    @default(false)
  verifiedAt  DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  ownerId     String     @unique
  owner       User       @relation("AgencyOwner", fields: [ownerId], references: [id])
  properties  Property[]
  members     User[]     @relation("AgencyMembers")
}

model Property {
  id              String             @id @default(cuid())
  title           String
  slug            String             @unique
  description     String
  type            PropertyType
  category        PropertyCategory
  status          PropertyStatus     @default(DRAFT)
  listingType     ListingType
  price           Decimal            @db.Decimal(12, 2)
  pricePerSqm     Decimal?           @db.Decimal(10, 2)
  charges         Decimal?           @db.Decimal(10, 2)
  bedrooms        Int?
  bathrooms       Int?
  rooms           Int?
  livingArea      Decimal?           @db.Decimal(10, 2)
  landArea        Decimal?           @db.Decimal(10, 2)
  floor           Int?
  totalFloors     Int?
  yearBuilt       Int?
  energyClass     EnergyClass?
  heatingType     String?
  address         String
  city            String
  postalCode      String
  neighborhood    String?
  latitude        Decimal?           @db.Decimal(10, 8)
  longitude       Decimal?           @db.Decimal(11, 8)
  features        String[]
  rejectionReason String?
  publishedAt     DateTime?
  expiresAt       DateTime?
  isFeatured      Boolean            @default(false)
  viewCount       Int                @default(0)
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  ownerId         String
  agencyId        String?
  favorites       Favorite[]
  agency          Agency?            @relation(fields: [agencyId], references: [id])
  owner           User               @relation(fields: [ownerId], references: [id])
  documents       PropertyDocument[]
  images          PropertyImage[]

  @@index([city, listingType, status])
  @@index([type, category])
  @@index([price])
}

model PropertyImage {
  id          String   @id @default(cuid())
  url         String
  alt         String?
  order       Int      @default(0)
  isFloorplan Boolean  @default(false)
  propertyId  String
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model PropertyDocument {
  id         String   @id @default(cuid())
  name       String
  url        String
  type       String
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model Plan {
  id            String          @id @default(cuid())
  name          String
  slug          String          @unique
  description   String?
  price         Decimal         @db.Decimal(10, 2)
  interval      BillingInterval
  listingsLimit Int
  featuredLimit Int             @default(0)
  features      String[]
  isActive      Boolean         @default(true)
  stripePriceId String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  subscriptions Subscription[]
}

model Subscription {
  id                   String             @id @default(cuid())
  status               SubscriptionStatus @default(ACTIVE)
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  cancelAtPeriodEnd    Boolean            @default(false)
  stripeSubscriptionId String?            @unique
  stripeCustomerId     String?
  userId               String             @unique
  planId               String
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  plan                 Plan               @relation(fields: [planId], references: [id])
  user                 User               @relation(fields: [userId], references: [id])
}

model Invoice {
  id              String        @id @default(cuid())
  amount          Decimal       @db.Decimal(10, 2)
  currency        String        @default("EUR")
  status          InvoiceStatus @default(PENDING)
  stripeInvoiceId String?       @unique
  pdfUrl          String?
  userId          String
  createdAt       DateTime      @default(now())
  paidAt          DateTime?
  user            User          @relation(fields: [userId], references: [id])
}

model SavedSearch {
  id           String   @id @default(cuid())
  name         String
  filters      Json
  alertEnabled Boolean  @default(false)
  userId       String
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Favorite {
  id         String   @id @default(cuid())
  userId     String
  propertyId String
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, propertyId])
}

enum UserRole {
  USER
  AGENT
  AGENCY_OWNER
  ADMIN
}

enum PropertyType {
  APARTMENT
  HOUSE
  VILLA
  STUDIO
  PENTHOUSE
  DUPLEX
  TRIPLEX
  LOFT
  OFFICE
  RETAIL
  WAREHOUSE
  LAND
  PARKING
  OTHER
}

enum PropertyCategory {
  RESIDENTIAL
  COMMERCIAL
  INVESTMENT
  LAND
}

enum PropertyStatus {
  DRAFT
  PENDING_REVIEW
  PUBLISHED
  REJECTED
  RESERVED
  SOLD
  RENTED
  EXPIRED
  ARCHIVED
}

enum ListingType {
  SALE
  RENT
}

enum EnergyClass {
  A_PLUS_PLUS
  A_PLUS
  A
  B
  C
  D
  E
  F
  G
  NOT_APPLICABLE
}

enum BillingInterval {
  MONTHLY
  YEARLY
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELLED
  PAUSED
}

enum InvoiceStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}
