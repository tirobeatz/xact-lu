generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  emailVerified DateTime?
  name          String?
  phone         String?
  image         String?
  bio           String?
  company       String?
  role          UserRole      @default(USER)
  isVerified    Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  agencyId      String?
  password      String?
  emailNotifications Boolean  @default(true)
  smsNotifications   Boolean  @default(false)
  marketingEmails    Boolean  @default(false)
  accounts      Account[]
  agency        Agency?       @relation("AgencyOwner")
  favorites     Favorite[]
  messages      Message[]
  properties    Property[]
  savedSearches SavedSearch[]
  sessions      Session[]
  agencyMember  Agency?       @relation("AgencyMembers", fields: [agencyId], references: [id])
}

model Agency {
  id          String     @id @default(cuid())
  name        String
  slug        String     @unique
  description String?
  logo        String?
  coverImage  String?
  website     String?
  email       String
  phone       String?
  address     String?
  city        String?
  postalCode  String?
  isVerified  Boolean    @default(false)
  verifiedAt  DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  ownerId     String     @unique
  owner       User       @relation("AgencyOwner", fields: [ownerId], references: [id])
  properties  Property[]
  members     User[]     @relation("AgencyMembers")
}

model Agent {
  id          String     @id @default(cuid())
  name        String
  email       String
  phone       String?
  image       String?
  bio         String?
  role        String?
  showOnAbout Boolean    @default(false)
  displayOrder Int       @default(0)
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  properties  Property[]
}

model Property {
  id              String             @id @default(cuid())
  title           String
  slug            String             @unique
  description     String
  titleTranslations    Json?         // { en: "...", fr: "...", de: "..." }
  descriptionTranslations Json?      // { en: "...", fr: "...", de: "..." }
  type            PropertyType
  category        PropertyCategory
  status          PropertyStatus     @default(DRAFT)
  listingType     ListingType
  price           Decimal            @db.Decimal(12, 2)
  pricePerSqm     Decimal?           @db.Decimal(10, 2)
  charges         Decimal?           @db.Decimal(10, 2)
  bedrooms        Int?
  bathrooms       Int?
  rooms           Int?
  livingArea      Decimal?           @db.Decimal(10, 2)
  landArea        Decimal?           @db.Decimal(10, 2)
  floor           Int?
  totalFloors     Int?
  yearBuilt       Int?
  energyClass     EnergyClass?
  heatingType     String?
  address         String
  city            String
  postalCode      String
  neighborhood    String?
  latitude        Decimal?           @db.Decimal(10, 8)
  longitude       Decimal?           @db.Decimal(11, 8)
  features        String[]
  rejectionReason String?
  publishedAt     DateTime?
  expiresAt       DateTime?
  isFeatured      Boolean            @default(false)
  viewCount       Int                @default(0)
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  ownerId         String
  agencyId        String?
  agentId         String?
  favorites       Favorite[]
  messages        Message[]
  agency          Agency?            @relation(fields: [agencyId], references: [id])
  owner           User               @relation(fields: [ownerId], references: [id])
  agent           Agent?             @relation(fields: [agentId], references: [id])
  documents       PropertyDocument[]
  images          PropertyImage[]

  @@index([city, listingType, status])
  @@index([type, category])
  @@index([price])
}

model PropertyImage {
  id          String   @id @default(cuid())
  url         String
  alt         String?
  order       Int      @default(0)
  isFloorplan Boolean  @default(false)
  propertyId  String
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model PropertyDocument {
  id         String   @id @default(cuid())
  name       String
  url        String
  type       String
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model SavedSearch {
  id           String   @id @default(cuid())
  name         String
  filters      Json
  alertEnabled Boolean  @default(false)
  userId       String
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Favorite {
  id         String   @id @default(cuid())
  userId     String
  propertyId String
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, propertyId])
}

model Message {
  id         String   @id @default(cuid())
  content    String
  fromName   String
  fromEmail  String
  fromPhone  String?
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  propertyId String
  toUserId   String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  toUser     User     @relation(fields: [toUserId], references: [id], onDelete: Cascade)
}

model SiteSettings {
  id              String   @id @default("default")
  siteName        String   @default("Xact Real Estate")
  siteDescription String?
  logo            String?
  email           String   @default("info@xact.lu")
  phone           String   @default("+352 621 000 000")
  address         String?
  updatedAt       DateTime @updatedAt
}

model ContactSubmission {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  inquiryType String   @default("general")
  message     String
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([email, createdAt])
}

model EstimateRequest {
  id           String   @id @default(cuid())
  name         String
  email        String
  phone        String?
  propertyType String
  address      String
  city         String
  postalCode   String?
  livingArea   Decimal? @db.Decimal(10, 2)
  landArea     Decimal? @db.Decimal(10, 2)
  bedrooms     Int?
  bathrooms    Int?
  yearBuilt    Int?
  condition    String?
  features     String[]
  description  String?
  images       String[]
  isProcessed  Boolean  @default(false)
  createdAt    DateTime @default(now())

  @@index([email, createdAt])
}

enum UserRole {
  USER
  AGENT
  AGENCY_OWNER
  ADMIN
}

enum PropertyType {
  APARTMENT
  HOUSE
  VILLA
  STUDIO
  PENTHOUSE
  DUPLEX
  TRIPLEX
  LOFT
  OFFICE
  RETAIL
  WAREHOUSE
  LAND
  PARKING
  OTHER
}

enum PropertyCategory {
  RESIDENTIAL
  COMMERCIAL
  INVESTMENT
  LAND
}

enum PropertyStatus {
  DRAFT
  PENDING_REVIEW
  PUBLISHED
  REJECTED
  RESERVED
  SOLD
  RENTED
  EXPIRED
  ARCHIVED
}

enum ListingType {
  SALE
  RENT
}

enum EnergyClass {
  A_PLUS_PLUS
  A_PLUS
  A
  B
  C
  D
  E
  F
  G
  NOT_APPLICABLE
}
